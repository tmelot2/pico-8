function bits(s)
	result=''
	for i=7,0,-1 do
		result ..= s >> i & 1
	end
	return result
end

function bits2(s)
	result=''
	for i=15,0,-1 do
		result ..= s >> i & 1
	end
	return result
end

p={8,9,10,11,12,13,14}
for i=0,2^15-1 do
	if i%32==0 then
		c=p[i%#p+1]
	end
	print(bits2(i),c)
end

